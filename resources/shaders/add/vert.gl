#version 430 core
layout (location = 0) in vec2 vertpos;

uniform ivec2 resolution;
uniform vec2 pos;
uniform vec2 scale;

void main()
{
    vec2 scaled = (((vertpos / vec2(2, -2)) + vec2(0.5, 0.5)) * scale + pos) / (resolution / 2);
    vec2 inverted = vec2(scaled.x - 1, 1 - scaled.y);
    gl_Position = vec4(inverted, 0.0, 1.0);
}