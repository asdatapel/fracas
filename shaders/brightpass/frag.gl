#version 330 core
out vec4 FragColor;

uniform sampler2D tex;
uniform float exposure;

in vec2 frag_uv;

void main()
{
    vec3 color = texture(tex, frag_uv).rgb;
    vec3 exposed_color = vec3(1.0) - exp(-color * exposure);
    float brightness = dot(exposed_color, vec3(0.2126, 0.7152, 0.0722));
    if(brightness < .6)
        color = vec3(0, 0, 0);
    
    color = max(vec3(0, 0, 0), color - exposed_color);
    FragColor = vec4(color, 1.0);
} 