#version 430 core
layout (location = 0) in vec2 pos;
layout (location = 1) in vec2 uv;
layout (location = 2) in vec4 color;

uniform ivec2 resolution;

out vec2 frag_uv;
out vec4 frag_color;

void main()
{
    frag_uv = uv;
    frag_color = color;

    vec2 scaled = (pos / resolution) * vec2(2, -2) - vec2(1, -1);
    gl_Position = vec4(scaled, 0.0, 1.0);
}